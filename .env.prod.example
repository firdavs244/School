# ============ BACKEND ============
# Kuchli va tasodifiy SECRET_KEY yarating:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-production-secret-key-must-be-very-long-and-random

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DATABASE_URL=sqlite:///./data/school.db

